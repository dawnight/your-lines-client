<nav class="header">
  <div class="logo-wrapper">
    <a href="/">
      <img src="{{ logoInfo.url }}" alt="{{ logoInfo.alt }}" class="logo">
    </a>
  </div>
  <ul class="nav">
    {% for item in navList %}
      <li class="nav-item">
        <a href="{{ item.href }}" class="nav-link {% if page === item.id %} active {% endif %}">{{ item.name }}</a>
      </li>
    {% endfor %}

    {% if user %}
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">用户中心</a>
        <div class="dropdown-menu">
          <a class="dropdown-item" href="/user/center">个人信息</a>
          <a class="dropdown-item" href="/user/logout">退出</a>
        </div>
      </li>
    {% else %}
    <li class="nav-item">
      <a href="/user/login" class="nav-link {% if page === 'user' %} active {% endif %}">登录</a>
    </li>
    {% endif %}
  </ul>
</nav>
